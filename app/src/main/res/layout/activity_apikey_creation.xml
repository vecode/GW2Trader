<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.github.vecode.gw2trader.presentation.apikeyedit.APIKeyCreationActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/KeyId"
        android:visibility="gone"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:id="@+id/Name"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Error Msg"
        android:editable="false"
        android:id="@+id/NameErrorMsg"
        android:layout_below="@id/Name"
        android:gravity="center_horizontal"
        android:visibility="invisible"/>

    <EditText
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Key"
        android:hint="Key"
        android:layout_below="@id/NameErrorMsg" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Error Msg"
        android:editable="false"
        android:id="@+id/KeyErrorMsg"
        android:layout_below="@id/Key"
        android:gravity="center_horizontal"
        android:visibility="invisible"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/SaveKey"
        android:text="Save Key"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
